{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Arquivo Atual",
            "type": "debugpy", // Tipo de depurador para Python
            "request": "launch",
            "program": "${file}", // Variável do VS Code que representa o arquivo ativo
            "console": "integratedTerminal", // Onde o programa será executado: terminal integrado, terminal externo, ou console de depuração
            "justMyCode": true // Se deve ignorar o código de bibliotecas externas (True por padrão)
        }
    ]
}